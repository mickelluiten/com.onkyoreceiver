{
  "id": "com.onkyo",
  "version": "3.0.0",
  "compatibility": ">=3.1.0",
  "sdk": 2,
  "brandColor": "#8142f5",
  "source": "https://github.com/mickelluiten/com.onkyoreceiver",
  "name": {
    "en": "Onkyo Receiver"
  },
  "dependencies": {
    "net": "*"
  },
  "description": {
    "en": "Control your Onkyo receiver with Homey"
  },
  "category": [
    "appliances"
  ],
  "permissions": [],
  "images": {
    "large": "/assets/images/large.png",
    "small": "/assets/images/small.png"
  },
  "author": {
    "name": "Mickel Luiten",
    "email": "mickelluiten@gmail.com"
  },
  "contributors": {
    "developers": [
      {
        "name": "Chamid Media",
        "email": "info@chamidmedia.nl"
      },
      {
        "name": "Mickel Luiten",
        "email": "mickelluiten@gmail.com"
      }
    ]
  },
  "drivers": [
    {
      "id": "onkyodriver",
      "name": {
        "en": "onkyoDriver"
      },
      "class": "amplifier",
      "capabilities": [
        "onoff",
        "volume_set",
        "volume_up",
        "volume_mute",
        "volume_down",
        "inputset"
      ],
      "images": {
        "large": "/drivers/onkyodriver/assets/images/large.png",
        "small": "/drivers/onkyodriver/assets/images/small.png"
      },
      "pair": [
        {
          "id": "start"
        },
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_devices"
          }
        },
        {
          "id": "add_devices",
          "template": "add_devices"
        }
      ]
    }
  ],
  "capabilities": {
    "inputset": {
      "type": "enum",
      "title": {
        "en": "Switch input"
      },
      "getable": true,
      "setable": true,
      "uiComponent": "picker",
      "values": [
        {
          "id": "!1SLI10",
          "title": {
            "en": "BD/DVD"
          }
        },
        {
          "id": "!1SLI00",
          "title": {
            "en": "VCR/DVR"
          }
        },
        {
          "id": "!1SLI01",
          "title": {
            "en": "CBL/SAT"
          }
        },
        {
          "id": "!1SLI20",
          "title": {
            "en": "TV/TAPE"
          }
        },
        {
          "id": "!1SLI11",
          "title": {
            "en": "STRM BOX"
          }
        },
        {
          "id": "!1SLI05",
          "title": {
            "en": "PC"
          }
        },
        {
          "id": "!1SLI02",
          "title": {
            "en": "GAME/TV"
          }
        },
        {
          "id": "!1SLI03",
          "title": {
            "en": "AUX"
          }
        },
        {
          "id": "!1SLI23",
          "title": {
            "en": "TV/CD"
          }
        },
        {
          "id": "!1SLI22",
          "title": {
            "en": "PHONO"
          }
        },
        {
          "id": "!1SLI12",
          "title": {
            "en": "TV"
          }
        },
        {
          "id": "!1SLI24",
          "title": {
            "en": "TUNER"
          }
        },
        {
          "id": "!1SLI2B",
          "title": {
            "en": "NET"
          }
        },
        {
          "id": "!1SLI29",
          "title": {
            "en": "USB"
          }
        },
        {
          "id": "!1SLI2E",
          "title": {
            "en": "BLUETOOTH"
          }
        }
      ]
    }
  }
}