{
  "id": "com.onkyo",
  "version": "3.3.0",
  "compatibility": ">=3.1.0",
  "sdk": 2,
  "brandColor": "#8142f5",
  "homeyCommunityTopicId": 30554,
  "support": "mailto:mickelluiten@gmail.com",
  "source": "https://github.com/mickelluiten/com.onkyoreceiver",
  "name": {
    "en": "Onkyo Receiver"
  },
  "dependencies": {
    "net": "*"
  },
  "description": {
    "en": "Control your Onkyo/Pioneer receiver with Homey"
  },
  "category": [
    "appliances"
  ],
  "permissions": [],
  "images": {
    "large": "/assets/images/large.jpg",
    "small": "/assets/images/small.jpg"
  },
  "author": {
    "name": "Mickel Luiten",
    "email": "mickelluiten@gmail.com"
  },
  "contributors": {
    "developers": [
      {
        "name": "Mickel Luiten",
        "email": "mickelluiten@gmail.com"
      }
    ]
  },
  "flow": {
    "triggers": [
      {
        "id": "receivecustomcommand",
        "title": {
          "en": "Receive a custom command"
        },
        "hint": {
          "en": "Receive a custom command as zoneID.command=argument. For Example main.volume=22. The command will be placed on the Received-Command token."
        }
      }
    ],
    "actions": [
      {
        "id": "sendcustomcommand",
        "title": {
          "en": "Send a custom command"
        },
        "hint": {
          "en": "Send a custom command as zoneID.command=argument. For Example main.volume=22"
        },
        "args": [
          {
            "name": "command",
            "type": "text",
            "placeholder": {
              "en": "Command"
            }
          }
        ]
      },
      {
        "id": "sendrawcommand",
        "title": {
          "en": "Send a RAW EISCP command"
        },
        "hint": {
          "en": "Send a RAW EISCP command as PWR00 for poweroff"
        },
        "args": [
          {
            "name": "command",
            "type": "text",
            "placeholder": {
              "en": "Command"
            }
          }
        ]
      }
    ]
  },
  "drivers": [
    {
      "id": "onkyodriver",
      "name": {
        "en": "onkyoDriver"
      },
      "class": "amplifier",
      "capabilities": [
        "onoff",
        "volume_set",
        "volume_up",
        "volume_mute",
        "volume_down",
        "inputset"
      ],
      "images": {
        "large": "/drivers/onkyodriver/assets/images/large.jpg",
        "small": "/drivers/onkyodriver/assets/images/small.jpg"
      },
      "pair": [
        {
          "id": "start"
        },
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_devices"
          }
        },
        {
          "id": "add_devices",
          "template": "add_devices"
        }
      ]
    }
  ],
  "capabilities": {
    "inputset": {
      "type": "enum",
      "title": {
        "en": "Switch input"
      },
      "getable": true,
      "setable": true,
      "uiComponent": "picker",
      "values": [
        {
          "id": "video1",
          "title": {
            "en": "VCR/DVR"
          }
        },
        {
          "id": "video2",
          "title": {
            "en": "CBL/SAT"
          }
        },
        {
          "id": "video3",
          "title": {
            "en": "GAME/TV"
          }
        },
        {
